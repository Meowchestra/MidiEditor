<?xml version="1.0"?>
<Installer>
    <Name>MidiEditor</Name>
    <Version>4.1.0</Version>
    <Title>MidiEditor</Title>
    <Publisher>Meowchestra</Publisher>
    <ProductUrl>https://github.com/Meowchestra/MidiEditor</ProductUrl>
    <InstallerWindowIcon>package.png</InstallerWindowIcon>
    <Logo>midieditor.png</Logo>
    <RunProgram>@TargetDir@/MidiEditor.exe</RunProgram>
    <RunProgramArguments/>
    <RunProgramDescription>Run MidiEditor</RunProgramDescription>
    <StartMenuDir>MidiEditor</StartMenuDir>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <WizardStyle>Modern</WizardStyle>
    <WizardDefaultWidth>800</WizardDefaultWidth>
    <WizardDefaultHeight>450</WizardDefaultHeight>

    <TargetDir>@HomeDir@/MidiEditor</TargetDir>
    <AdminTargetDir>@RootDir@/MidiEditor</AdminTargetDir>
    <RemoteRepositories>
        <Repository>
            <Url>https://Meowchestra.github.io/MidiEditor/</Url>
            <Enabled>1</Enabled>
            <DisplayName>Github Repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>